<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.Mapper.UserMapper">

    <insert id="insertUser">
        insert into user(login_account,password,username,
                         gender,phone,email,is_active,create_time,
                         update_time,create_by,update_by,remark)
        values(#{loginAccount},#{password},#{username},
               #{gender},#{phone},#{email},#{isActive},
               #{createTime},#{updateTime},#{createBy},
               #{updateBy},#{remark})
    </insert>
    <update id="update">
        update user
        <set>
            <if test="loginAccount != null">
                login_account = #{loginAccount},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="isActive != null">
                is_active = #{isActive}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteByIds" parameterType="java.util.List">
        DELETE FROM user
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="limitSelect" resultType="com.sky.vo.UserVo">
        select id,username,gender,phone,email,is_active,
        create_time,create_by,remark
        from user
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="gender != null">
                AND gender = #{gender}
            </if>
            <if test="isActive != null">
                AND is_active = #{isActive}
            </if>
        </where>
    </select>
    <select id="getById" resultType="com.sky.entity.User">
        select * from user where id = #{id}
    </select>
</mapper>