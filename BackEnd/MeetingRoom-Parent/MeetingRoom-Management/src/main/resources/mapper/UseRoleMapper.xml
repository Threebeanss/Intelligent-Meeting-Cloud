<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sky.Mapper.RoleMapper">
    <insert id="insertUserRole">
        INSERT INTO user_role (user_id, role_id) VALUES (#{userId}, #{roleId})
    </insert>
    <delete id="deleteUserRolesByUserId">
        DELETE FROM user_role WHERE user_id = #{userId}
    </delete>

    <select id="selectByUserId" resultType="com.sky.entity.Role">
        SELECT r.id, r.role_code, r.role_name, r.status
        FROM role r
                 INNER JOIN user_role ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
    </select>
    <select id="selectUserRolesByUserId" resultType="com.sky.entity.UserRole">
        SELECT id, user_id, role_id
        FROM user_role
        WHERE user_id = #{userId}
    </select>
</mapper>